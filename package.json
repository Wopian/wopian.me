{
  "name": "wopian.me",
  "version": "1.0.0",
  "description": "Personal homepage of wopian",
  "author": "James Harris",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "budo -d dist -l -H localhost",
    "build": "run-p pug styles public && yarn run styles:compress",
    "pug": "pug client/index.pug -o dist",
    "public": "cpy public/**.* dist",
    "styles": "node-sass client/styles -o dist --importer node_modules/node-sass-import",
    "styles:compress": "postcss dist/main.css > dist/main.min.css"
  },
  "contributors": [
    {
      "name": "James Harris",
      "email": "wopian@wopian.me",
      "url": "https://wopian.me"
    }
  ],
  "homepage": "https://wopian.me",
  "repository": {
    "type": "git",
    "url": "https://github.com/wopian/wopian.me"
  },
  "bugs": {
    "url": "https://github.com/wopian/wopian.me/issues"
  },
  "dependencies": {
    "autoprefixer": "~9.7.4",
    "cpy-cli": "~3.1.0",
    "cssnano": "~4.1.10",
    "node-sass": "~4.14.0",
    "node-sass-import": "~2.0.1",
    "npm-run-all": "~4.1.5",
    "postcss-cli": "~7.1.0",
    "pug": "~2.0.4",
    "pug-cli": "~1.0.0-alpha6"
  },
  "devDependencies": {
    "budo": "~11.6.3"
  },
  "renovate": {
    "extends": [
      "@wopian"
    ]
  }
}
